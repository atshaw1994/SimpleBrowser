<UserControl x:Class="SimpleBrowser.SettingsTabItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SimpleBrowser"
             mc:Ignorable="d" 
             HorizontalAlignment="Center">
    <Border Background="{DynamicResource Global.Background}" BorderBrush="{DynamicResource BaseButton.Border}" BorderThickness="1" CornerRadius="6">
        <ScrollViewer>
            <StackPanel Margin="8">
                <StackPanel Orientation="Horizontal" Margin="0,8" HorizontalAlignment="Center">
                    <TextBlock Text="Home Page: " VerticalAlignment="Center" Foreground="{DynamicResource Global.Foreground}"/>
                    <TextBox Text="http://www.google.com" Width="250" Style="{DynamicResource TextBoxStyle}"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="8" HorizontalAlignment="Center">
                    <TextBlock Text="Theme: " VerticalAlignment="Center" Foreground="{DynamicResource Global.Foreground}"/>
                    <ComboBox x:Name="ThemeSelection" Text="Dark" IsEditable="False" SelectedIndex="0" Style="{DynamicResource ComboBoxStyle}" SelectionChanged="ThemeChanged">
                        <ComboBoxItem Content="Dark"/>
                        <ComboBoxItem Content="Light"/>
                    </ComboBox>
                </StackPanel>
            </StackPanel>
        </ScrollViewer>
    </Border>
</UserControl>
